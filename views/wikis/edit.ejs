<form action="/wikis/<%=._id%>/?_method=PATCH" method="post">

  <label>What's on your mind?: </label>
  <input type="text" name="wiki[title]" value="<%= wiki.title %>" />

  <label>Tell us more about it: </label>
  <textarea name="wiki[content]"> <%= wiki.content %> </textarea>

  <label>Select a Category</label>
  <select name="wiki[category]">
    <option value="business">Business</option>
    <option value="personal">Personal</option>
    <option value="collaborate">Let's Collaborate</option>
    <option value="fun">Just for Fun</option>
  </select></br>

  <input type="submit" value="Update the post" />

</form>
