
<head>
  <link rel="stylesheet" type="type/css" href="/stylesheets/style_sheet_wikis_new.css">
</head>

<div id="new-form">
  <form action="/wikis" method="post">
    <!-- <label>Title of your article: </label><br> -->
    <input type="text" name="wiki[title]" placeholder="title" /></br>

    <!-- <label>Tell us about it: </label><br> -->
    <textarea placeholder="enter your brain contents here" name="wiki[content]"></textarea></br>

    <!-- <label>Select a Category</label> -->
    <select name="wiki[category]" placeholder="Please select">
      <option value="">Select...</option>
      <option value="business">Business</option>
      <option value="personal">Personal</option>
      <option value="collaborate">Let's Collaborate</option>
      <option value="fun">Just for Fun</option>
    </select>

    <input type="submit" value="Add your new thought" />
  </form>
</div>
